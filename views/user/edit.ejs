<form action="/user/update/<%=user.id%>" method="post" class="form-signin">
  <input type="hidden" name="_csrf" value="<%= _csrf %>">
  <h2>Benutzer editieren</h2>
  <input type="text" class="form-control" placeholder="Name" name="name" value="<%=user.name%>">
  <input type="email" class="form-control" placeholder="Email Adresse" name="email" value="<%=user.email%>">

  <input type="submit" class="btn btn-lg btn-primary btn-block" value="Editieren">
</form>