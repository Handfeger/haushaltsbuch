<div class="container">
    <h1>Alle Benutzer <a href="/user/new" class="btn btn-lg btn-success">Neu</a></h1>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th colspan="3">Actions</th>
        </tr>
        </thead>
        <tbody>
        <% _.each(users, function (user) { %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td>
                <a class="btn btn-default btn-primary" href="/user/show/<%= user.id %>">Anzeigen</a>
            </td>
            <td>
                <a class="btn btn-warning" href="/user/edit/<%= user.id %>">Edit</a>
            </td>
            <td>
                <form action="/user/destroy/<%= user.id %>" method="POST">
                    <input type="hidden" name="_method" value="delete"/>
                    <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
                    <input type="submit" class="btn btn-danger" value="L&ouml;schen"/>
                </form>
            </td>
        </tr>
        <% }) %>
        </tbody>
    </table>
</div>